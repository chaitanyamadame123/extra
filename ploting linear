import matplotlib.pyplot as plt
import numpy as np
x =np.linspace(-2,2,100)
y = (2*x) + 3 
y1 = 6*(x-2)+3
y2 = (-(2*x)+6)/6
y3 = (1-(x/2))*3
y4 = x + 3
y5 = 3*x
y6 = np.ones(100)
plt.plot(x, y)
plt.plot(x, y1)
plt.plot(x, y2)
plt.plot(x, y3)
plt.plot(x, y4)
plt.plot(x, y5)
plt.plot(x, y6)
plt.grid();plt.show()
